import codecademylib
import pandas as pd

inventory = pd.read_csv('inventory.csv')

inventory.head(10)

staten_island = inventory.iloc[:10]
#print(staten_island)

product_request = inventory[inventory.product_description.isin(['Staten Island'])]

#print(product_request)

seed_request = inventory[
  (inventory.location == 'Brooklyn') & (inventory.product_type == 'seeds')
]

inventory['in_stock'] = inventory.quantity.apply(lamda x: True if x > 0 else False if x==0)

inventory['total_value'] = inventory.quantity * inventory.price

combine_lambda = lambda row: \
    '{} - {}'.format(row.product_type,
                     row.product_description)

inventory['full_description'] = inventory.groupby('product_type').product_description.apply(combine_lambda)

inventory.head(10)

